<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Mis Eventos{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}"/>
    </head>
    <body>

    <div class="navbar">
        <div class="navbar-inner">
            <div class="container">
                <div class="row-fluid">
                    <div class="span4">
                        <a href="" class="brand">Mis Eventos</a>
                    </div>
                    <div class="span8">
                        <div class="pull-right">
                            {% if app.user %}
                                <a class="btn btn-danger" href="{{ path('logout') }}"><i class="icon-user"></i><span>Logout</span></a>
                            {% else %}
                                <form action="{{ path('home') }}" method="post" class="navbar-form">
                                    <input type="text" name="_username" placeholder="Usuario"/>
                                    <input type="text" name="_password" placeholder="Password"/>
                                    <input class="btn btn-success" type="submit" value="Login"/>
                                </form>
                            {% endif %}
                        </div>
                    </div>

                </div>





            </div>

        </div>


    </div>

        <div class="row-fluid">
            <div class="span2">
                <ul class="nav nav-tabs nav-stacked">
                    <li><a href="{{ path('home') }}">Eventos</a></li>
                </ul>
            </div>
            <div class="span10">
                <div class="container">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

        {% block javascripts %}{% endblock %}

    </body>
</html>
